DMA2_MM_config()
{
RCC->AHB1ENR |=(1<<22);// clock
DMA2->S =0;
while(DMA2_Stream0->CR&1);
//HALF WORD 01
DMA2->S2CR |=(1<13);
DMA2->S2CR&=~(1<<14);
//HALF WORD 10
DMA2->S2CR |=(1<11);
DMA2->S2CR&=~(1<<12);
DMA2->S2CR |=(1<<10);// INCREMENT
DMA2->S2CR |=(1<<9);
//Data transfer 10
DMA2->S2CR &=~(1<<6);
DMA2->S2CR |=(1<<7);

DMA2->S2CR |=(1<<4);// transfer complete
DMA2->S2CR |=(1<<2);// error
DMA2->S2CR &=~(1<<0);//bit 0

DMA2->S2FCR |=(1<<2);// direct mode disabled
//FIFO FULL FULL
DMA2->S2FCR |=(1<<3);
DMA2->S2FCR |=(1<<2);
DMA2->S2FCR |=(1<<1);
}

NVIC_ENABLEIRQ(DMA2_STREAM)
{}

